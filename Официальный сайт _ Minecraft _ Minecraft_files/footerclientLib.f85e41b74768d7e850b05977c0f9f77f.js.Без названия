$(document).ready((function(){if($(".ms-links__links--locale, .ms-footer__language-selector-close").click(e=>{e.preventDefault(),$("#language-selector").slideToggle(260),$("html, body").animate({scrollTop:$(document).height()},260,"linear")}),window.location.search.indexOf("hideChrome")>0||window.location.href.indexOf("nintendo-switch")>0){for(var e=document.cookie.split(";"),t=0;t<e.length;t++){var n=e[t],o=n.indexOf("="),i=o>-1?n.substr(0,o):n;i&&(document.cookie=i+"=;  domain="+location.hostname+"; path=/; expires="+new Date(0).toUTCString(),document.cookie=i+"=;   path=/; expires="+new Date(0).toUTCString())}document.__defineGetter__?(document.__defineGetter__("cookie",(function(){return""})),document.__defineSetter__("cookie",(function(){}))):Object.defineProperty(document,"cookie",{get:function(){return""},set:function(){return!0}})}$("#currentYear").text((new Date).getFullYear()),$("#language-switcher a").click((function(e){e.preventDefault();var t=$(e.target);document.cookie="language_url="+t.attr("href")+"/; path=/; SameSite=None; Secure",window.location=t.attr("href")}))}));